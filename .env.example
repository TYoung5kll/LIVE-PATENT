# LIVE Messaging Service Configuration
REACT_APP_API_URL=https://localhost:443/api

# Authentication
REACT_APP_AUTH_TOKEN_KEY=authToken

# LIVE Service Configuration
REACT_APP_LIVE_SERVICE_NAME=LIVE
REACT_APP_DEFAULT_COMPANY_NAME=LIVE

# SSL/HTTPS Configuration
REACT_APP_SSL_VERIFY=true
REACT_APP_HTTPS_ONLY=true

# SendGrid Configuration (for reference - stored on backend)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=your-verified-email

# Twilio Configuration (for reference - stored on backend)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_MESSAGING=true

# External Services
REACT_APP_SENTRY_DSN=your-sentry-dsn-here
REACT_APP_GA_TRACKING_ID=your-google-analytics-id

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false

# Patent Information
REACT_APP_PATENT_OWNER=Theodore G. Young Jr
REACT_APP_SERVICE_NAME=LIVE - Encrypted Messaging Service